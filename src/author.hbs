{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The main content area on the author page --}}
<div class="primary">

	{{!-- Everything inside the #author tags pulls data from the author --}}
	{{#author}}
	<header class="page-header">
		<div class="page-header-inside inner-small outer">
			<div class="author-info">
				{{#if profile_image}}
				<div class="author-avatar">
					<img src="{{img_url profile_image size="xxs"}}" alt="{{name}}" class="avatar" />
				</div>
				{{/if}}
				<div class="author-details">
					<h1 class="author-title line-accent">{{{t "About <span class='highlight'>{name}</span>" name=name}}}</h1>
					{{#if bio}}
					<p class="author-bio">{{bio}}</p>
					{{/if}}
					<p class="author-links">
						<span class="author-stats">{{> "icons/bar-chart"}} {{plural ../pagination.total empty=(t "No posts") singular=(t "% post") plural=(t "% posts")}}</span>
						{{#if location}}
						<span class="author-location">{{> "icons/map-pin"}} {{location}}</span>
						{{/if}}
						{{#if website}}
						<span class="author-website">{{> "icons/link"}} <a href="{{website}}" target="_blank" rel="noopener">{{t "Website"}}</a></span>
						{{/if}}
						{{#if facebook}}
						<span class="author-facebook">{{> "icons/facebook"}} <a href="{{facebook_url}}" target="_blank" rel="noopener">Facebook</a></span>
						{{/if}}
						{{#if twitter}}
						<span class="author-twitter">{{> "icons/twitter"}} <a href="{{twitter_url}}" target="_blank" rel="noopener">Twitter</a></span>
						{{/if}}
					</p>
				</div>
			</div><!-- .author-info -->
		</div><!-- .author-box -->
	</header><!-- .page-header -->
	{{/author}}

	{{!-- The post loop - partials/loop.hbs --}}
	{{> "loop"}}

</div><!-- .primary -->

{{!-- The theme sidebar - partials/sidebar.hbs --}}
{{> sidebar}}
