{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts visibility="all"}}
<article class="{{post_class}}">
	<header class="post-header">
		<div class="post-header-wrap">
			{{#if feature_image}}
			<a href="{{url}}" class="post-thumbnail">
				<img srcset="{{img_url feature_image size="xs"}} 300w, {{img_url feature_image size="s"}} 480w, {{img_url feature_image size="m"}} 600w, {{img_url feature_image size="l"}} 900w, {{img_url feature_image size="xl"}} 1800w" sizes="(max-width: 500px) calc(100vw - 30px), (max-width: 960px) 94vw, (max-width: 1260px) calc(75vw - 45px), 900px" src="{{img_url feature_image size="l"}}" alt="{{title}}" />
			</a>
			{{/if}}
			<h2 class="post-title outer"><a href="{{url}}" rel="bookmark">{{title}}</a></h2>
		</div>
		<div class="post-meta outer">
			{{#if featured}}
			<span class="featured-badge" aria-hidden="true">{{> "icons/star"}}</span>
			{{/if}}
			<span class="post-author">{{authors}}</span> / <time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
		</div>
	</header><!-- .post-header -->
	<div class="post-content inner-small outer">
		{{#if custom_excerpt}}
		<p>{{custom_excerpt}}</p>
		{{else}}
		<p>{{excerpt words="100"}}&hellip;</p>
		{{/if}}
		<p class="read-more"><a class="button" href="{{url}}">{{t "Read More"}}</a></p>
	</div><!-- .post-content -->
	{{#if tags}}
	<footer class="post-footer inner-small outer">
		<div class="post-tags">
			<span>{{t "Tags:"}}</span>
			{{tags separator=""}}
		</div>
	</footer><!-- .entry-footer -->
	{{/if}}
</article><!-- .post -->
{{/foreach}}

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}
