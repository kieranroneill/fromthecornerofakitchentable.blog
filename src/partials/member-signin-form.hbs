{{!-- Member sign in form --}}
<form data-members-form="signin" class="signin-form">
	<div class="form-group">
		<input data-members-email class="subscribe-email" type="email" name="email" placeholder="{{t "Your email address"}}" required />
		<button class="button" type="submit">
			<span class="button-content">{{t "Send login link"}}</span>
		</button>
	</div>
	{{> "member-form-messages"}}
</form><!-- signin-form -->
