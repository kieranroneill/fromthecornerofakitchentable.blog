<nav class="pagination">
	{{#if prev}}
	<a class="newer-posts button button-icon button-fill-horz" href="{{page_url prev}}">{{> "icons/chevron-left"}}<span class="screen-reader-text">{{t "Newer Posts"}}</span></a>
	{{/if}}
	<span class="page-number">{{t "Page {page} of {pages}" page=page pages=pages}}</span>
	{{#if next}}
	<a class="older-posts button button-icon button-fill-horz" href="{{page_url next}}">{{> "icons/chevron-right"}}<span class="screen-reader-text">{{t "Older Posts"}}</span></a>
	{{/if}}
</nav><!-- .pagination -->
